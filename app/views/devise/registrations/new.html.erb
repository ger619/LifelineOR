<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="flex h-screen w-full overflow-x-hidden">
  <%= render "devise/shared/homepage" %>
  <section class=" w-1/2 relative bg-cover outline-none" style="background-image: url('<%= asset_path('bg-color.png') %>');">
  <%= image_tag('blurred_circle.png', alt: 'blurred circle', class: 'absolute -right-32 top-24 opacity-70') %>
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="w-full  md:mt-0 sm:max-w-md xl:p-0 ">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8 ">
          
          
            <section class="font-merienda">
              
                  <div class="w-full bg-gradient-to-r from-gray-100 to-gray-300 rounded-lg  md:mt-0 sm:max-w-md xl:p-0 backdrop-filter backdrop-opacity-40 bg-opacity-65">
                    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                      <h1 class="text-xl font-extrabold leading-tight tracking-tight text-scooter-600 md:text-2xl ">
                        Sign Up
                      </h1>
                      <form class="space-y-4 md:space-y-6 form" action="#">
                        <div>
                          <label for="email" class="block mb-2 text-base font-bold text-scooter-700 ">Your email</label>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "name@company.com", required: true %>
                        </div>

                        <div class="field">
                            <%= f.label :password, class: "block mb-2 text-base font-bold text-scooter-700 " %>
                            <% if @minimum_password_length %>
                              <em class="text-scooter-950">(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
                        </div>
                        <div>
                          <%= f.label :password_confirmation, class: "block mb-2 text-base font-bold text-scooter-700 "  %>
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
                        </div>
                        <%= f.submit "Sign Up", class: "w-full text-scooter-950 hover:text-white bg-primary-600 hover:bg-scooter-950 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center border border-scooter-950" %>
                        <p class="text-sm font-light text-scooter-950 ">
                        Already have an account Sign in? <a href="#" class="font-medium text-primary-600 hover:underline dark:text-primary-500"><%= render "devise/shared/links" %></a>
                        </p>
                      </form>
                    </div>
                  </div>
              
            </section>
        </div>
      </div>
    </div>
  </section>
  

</div>



<% end %>