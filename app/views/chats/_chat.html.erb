<turbo-frame id="current-chat">
  <div id="<%= dom_id chat %>">
    <div id="history-area" class="h-full">

      <% unless chat.q_and_a.blank? %>
        <%  chat.q_and_a.each do |question, answer| %>
          <div class="row mb-2">
            <div class="col-6">
              <strong>Question:</strong>
              <%=simple_format question %>
            </div>
            <div class="col-6">
              <strong>Answer:</strong>
              <%=simple_format answer %>
            </div>
          </div>
        <% end %>
      <% end %>


    </div>
  </div>
    <%= form_with(model: chat) do |form| %>
      <div class="my-5">
        <%= form.text_field :message, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Ask  A Query" %>
      </div>
      <div class="inline">
        <%= form.submit "Submit", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>
    <% end %>

</turbo-frame>